<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Roll Number : "
        android:textStyle="bold"
        android:textSize="25dp"
        android:id="@+id/txtRoll"
        android:layout_marginTop="10dp"
       android:layout_marginLeft="10dp"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Roll Number Here..."
        android:layout_toRightOf="@+id/txtRoll"
        android:layout_marginLeft="15dp"

        android:layout_marginTop="10dp"
        android:id="@+id/edt_roll"

        />

    <TextView
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtRoll"
        android:layout_marginLeft="10dp"
        android:text="Name : "
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:id="@+id/txt_name"

        />

    <EditText
        android:layout_width="209dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_roll"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/txt_name"
        android:hint="Enter Name Here..."
        android:id="@+id/edt_name"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender : "
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_below="@+id/txt_name"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
    android:id="@+id/txt_gender"
        />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_gender"
        android:layout_marginTop="30dp"

        android:id="@+id/radio_grp"
        >
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male : "
            android:textStyle="bold"

            android:layout_marginLeft="10dp"

            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:layout_marginLeft="10dp"
android:textStyle="bold"

            />


    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date : "
        android:id="@+id/txt_date"
        android:layout_below="@id/radio_grp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textSize="25dp"
android:textStyle="bold"

        />

    <TextView
        android:layout_width="208dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/radio_grp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="30dp"
android:id="@+id/txt_setdate"
        android:layout_toRightOf="@+id/txt_date"

        android:hint="Select a Date Here..." />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textStyle="bold"
    android:text="Image : "
    android:textSize="25dp"
    android:layout_below="@+id/txt_date"
    android:layout_marginTop="50dp"
    android:layout_marginLeft="10dp"


    android:id="@+id/txt_image"

    />
<ImageView
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_below="@id/txt_setdate"
    android:layout_toRightOf="@id/txt_image"
    android:layout_marginTop="22dp"
    android:layout_marginLeft="135dp"
    android:id="@+id/img_gallery"
    android:src="@color/colorAccent"
        />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Save"
            android:layout_below="@id/txt_image"
            android:layout_marginTop="180dp"
            android:layout_marginLeft="100dp"
            android:id="@+id/btn_save"

            />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show"
    android:layout_below="@+id/txt_image"
        android:layout_toRightOf="@+id/btn_save"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="10dp"
android:id="@+id/btn_show"

        />



</RelativeLayout>



</RelativeLayout>